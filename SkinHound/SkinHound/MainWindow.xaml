<Window x:Class="SkinHound.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SkinHound"
        mc:Ignorable="d"
        Title="SkinHound" MinHeight="260" MinWidth="410" Height="260" Width="410">
    <Grid>
        <Grid>
            <TabControl>
                <TabItem>
                    <TabItem.Header>
                        <StackPanel Orientation="Horizontal">
                            <Image Source="/WpfTutorialSamples;component/Images/bullet_blue.png" />
                            <TextBlock Text="Tracker" Foreground="Green" />
                        </StackPanel>
                    </TabItem.Header>
                    <!-- Item DealS Grid -->
                    <ScrollViewer VerticalScrollBarVisibility="Visible" HorizontalScrollBarVisibility="Disabled">
                        <WrapPanel x:Name="DealsGrid" HorizontalAlignment="Left" VerticalAlignment="Top" ItemHeight="216" ItemWidth="384">
                            <!-- Area where the items on deal are inserted/created -->
                            <Border Background="GhostWhite" BorderBrush="Black" BorderThickness="1" Margin="1">
                                <Grid x:Name="DealXGrid" Grid.Column="0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition MaxWidth="128" MinWidth="128"/>
                                        <ColumnDefinition MinWidth="256" MaxWidth="256"/>
                                    </Grid.ColumnDefinitions>
                                    <!-- Items -->
                                    <Button Name="DealButtonX" Click="DealClicked" Grid.Column="0">
                                        <StackPanel VerticalAlignment="Top" MaxHeight="216" MinHeight="216">
                                            <Image Source="resources\Notifications\GoldenNotification.jpg" HorizontalAlignment="Center" VerticalAlignment="Top"/>
                                            <TextBlock x:Name="DealXItemName" TextAlignment="Center" TextDecorations="Underline" FontWeight="DemiBold" TextWrapping="WrapWithOverflow" Text="M4A1-S Printsream Factory New"/>
                                        </StackPanel>
                                    </Button>
                                    <StackPanel Grid.Column="1" >
                                        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Top">Button 1</TextBlock>
                                        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center">Button 2</TextBlock>
                                        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Bottom">Button 3</TextBlock>
                                    </StackPanel>
                                </Grid>
                            </Border>
                            <!-- End of the Deal Area-->
                        </WrapPanel>
                    </ScrollViewer>
                </TabItem>
                <!-- End of Item DealS Grid -->
                <TabItem>
                    <TabItem.Header>
                        <StackPanel Orientation="Horizontal">
                            <Image Source="/WpfTutorialSamples;component/Images/bullet_red.png" />
                            <TextBlock Text="Price Check" Foreground="Green" />
                        </StackPanel>
                    </TabItem.Header>
                </TabItem>
                <TabItem>
                    <TabItem.Header>
                        <StackPanel Orientation="Horizontal">
                            <Image Source="/WpfTutorialSamples;component/Images/bullet_green.png" />
                            <TextBlock Text="Settings" Foreground="Black" />
                        </StackPanel>
                    </TabItem.Header>
                </TabItem>
            </TabControl>
        </Grid>
    </Grid>
</Window>
